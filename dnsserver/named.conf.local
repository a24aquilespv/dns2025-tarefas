zone "starwars.lan" {
	type master;
	file "/etc/bind/db.starwars.lan";

	// Permitir transferencias de zona a ips
	allow-transfer {
		172.24.0.101;
	};
};

zone "20.168.192.in-addr.arpa" {
	type master;
	file "/etc/bind/db.20.168.192";
	allow-transfer {
		172.24.0.101;
	};
};

zone "24.172.in-addr.arpa" {
	type master;
	file "/etc/bind/db.24.172";
	allow-transfer {
		172.24.0.101;
	};
};
